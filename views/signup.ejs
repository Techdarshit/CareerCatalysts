<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
    <div class="signup-container row">
        <div class="illustration col-md-6 col-lg-6 col-sm-12">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTac_Yg3Nd8jYV_bUBeY8Kn693jFpKapt1jfQ&s" alt="Sign Up Illustration">
        </div>
        <div class="form-section col-md-6 col-lg-6 col-sm-12">
            <h1>Welcome to Career Catalysts</h1>
            <p>A career partner helping many students around the global world.</p>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="InputUserName">Username:</label>
                    <input type="text" id="InputUserName" name="username" placeholder="Enter your username" required>
                </div>
                <div class="form-group">
                    <label for="InputEmail">Email:</label>
                    <input type="email" id="InputEmail" name="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="InputPass">Password:</label>
                    <input type="password" id="InputPass" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn">Sign Up Now</button>
            </form>
        </div>
    </div>
</body>
</html>
